<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <data>
<!-- school management main menu -->
        <menuitem id="school_management_menu_root"
            name="School Management"/>

<!-- employee detail submenu -->
        <menuitem id="employee_detail_menu"
          name="Employee"

          parent="school_management_menu_root"
          action="action_employee_detail"/>



<!-- form tag start from here-->

         <record id="employee_detail_view_form" model="ir.ui.view">
            <field name="name">employee.view.form</field>
            <field name="model">employee.detail</field>
            <field name="arch" type="xml">
                <form string="Employee">
                    <sheet>
                        <!-- sequence generator -->
                         <h2>
                             <field name="employee_seq"/>
                         </h2>

                        <group string="Employee Management">
                            <group>
                                <field name="name" widget="char_emojis"/>

                                <field name="emp_id" widget="color_picker"/>


                                <field name="employee_dob"/>

                            </group>
                            <group>
                                <field name="employee_gender" widget="employee_gender"/>

                                <field name="employee_type"/>


                                <field name="mobile_number" widget="phone"/>

                                <field name="e_mail" widget="email"/>
                            </group>



                        </group>
                    </sheet>
                </form>
            </field>
        </record>


<!-- tree tag start from here-->

      <record id="employee_detail_view_tree" model="ir.ui.view">
         <field name="name">employee.view.tree</field>
         <field name="model">employee.detail</field>
         <field name="arch" type="xml">
             <tree>
                 <field name="name" required="1"/>
                  <field name="employee_gender" widget="employee_gender"/>

                <field name="employee_type"/>


                <field name="mobile_number" widget="phone"/>
             </tree>
         </field>
      </record>



      <!-- action field -->

      <record model="ir.actions.act_window" id="action_employee_detail">
            <field name="name">Employee Management</field>
           <field name="res_model">employee.detail</field>
            <field name="view_mode">tree,form</field>
        </record>


 



    </data>
</odoo>

