<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <data>

        <menuitem id="school_management_menu_root"
            name="School Management"/>


        <menuitem id="getdata_wizard_menu"
          name="GetDataWizard"
          parent="school_management_menu_root"
          action="action_getdata_form_wizard"/>



<!-- form tag start from here-->

         <record id="getdata_wizard_view_form" model="ir.ui.view">
            <field name="name">getdata.view.form</field>
            <field name="model">getdata.wizard</field>
            <field name="arch" type="xml">
                <form string="Wizard">
                    <sheet>
                        <group string="wizard Management">
                            <group>
                                <field name="students_id"/>


                            </group>



                        </group>

                    </sheet>
                </form>
            </field>
        </record>





      <!-- action field -->

      <record id="action_getdata_form_wizard" model="ir.actions.act_window">
            <field name="name">Wizard to Form</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">getdata.wizard</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">form</field>
            <field name="view_id" ref="getdata_wizard_view_form"/>
            <field name="target">new</field>
        </record>



    </data>
</odoo>



