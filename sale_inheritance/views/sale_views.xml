<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>    

    <!-- sale order views form #T00316-->
        <record id="sale_views_form" model="ir.ui.view">
            <field name="name">sale.views</field>
            <field name="model">sale.order</field>
            <field name="priority">9</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- this xpath add fields in sale order form view #T00316-->
                <xpath expr="/form//field[@name='payment_term_id']" position="after">
                    <field name="invoice_description"/>
                    <field name="delivery_description"/>
                    <field name="mrp_text"/>
                </xpath>
                 <!-- this xpath add fields in sale order form view #T00316-->
                <xpath expr="/form//field[@name='partner_id']" position="after">
                    <field name="project_text"/>                
                    <field name="task_text"/>
                    <field name ="introduction_id" groups = "sale_inheritance.group_sales_management_introduction"/>
                    <field name ="closing_id" groups = "sale_inheritance.group_sales_management_closing"/>
                </xpath>
                <!-- this xpath add field in one2many field in form view #T00316-->
                <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
                    <field name="sale_data"/> 
                </xpath>
            </field>
        </record>
  </data>
</odoo>
