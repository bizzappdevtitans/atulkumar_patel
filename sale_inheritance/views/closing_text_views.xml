<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
        <!-- Top menu item -->
        <menuitem id="sale_menu_root"
            name="Sales Inheritance"/>
          
        <menuitem id="closing_menu"
          name = "Closing"
          parent = "sale_menu_root"      
          action="action_closing_detail"/>

    <!-- closing text views form -->
        <record id="closing_views_form" model="ir.ui.view">
            <field name="name">closing.text.view.form</field>
            <field name="model">closing.text</field>
            <field name="arch" type="xml">
              <form string="Closing">
                <sheet>
                        <h2>
                           <field name="closing_seq"/>
                        </h2>
                <group>      
                      <group>
                        <field name="name"/>
                        <field name="gender"/>
                        <field name="age"/>
                      </group>
                      <group>  
                        <field name="contact" widget="phone"/>
                        <field name="address"/>
                        <field name="closing_text"/>
                      </group>
                </group>
                </sheet>
              </form>
            </field>
        </record>

        <!-- closing text views tree -->
        <record id="closing_views_tree" model="ir.ui.view">
            <field name="name">closing.text.view.tree</field>
            <field name="model">closing.text</field>
            <field name="arch" type="xml">
             <tree>
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="age"/>
                    <field name="contact"/>
                    <field name="address"/>

              </tree>
            </field>
        </record> 



      <!-- search views -->
       <record id="closing_view_search" model="ir.ui.view">
        <field name="name">closing.text.view.search</field>
        <field name="model">closing.text</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="gender"/>

                <!-- filter tage to filter record based on gender -->
                <filter name='male' string='Male' domain="[('gender','=','male')]"/>
                <separator/>

                <filter name='female' string='Female' domain="[('gender','=','female')]"/>


                <!-- group by tag to filter record using groupby gender -->
                <group expand="0" string="Group By">
                    <filter string="Gender" name="group_by_gender" context="{'group_by' : 'gender'}"/>

                </group>
                        <!-- searchpanel tag -->
                        <searchpanel>
                            <field name = "gender" icon = "fa-user-o" />
                        </searchpanel>
            </search>
          </field>
        </record>


                <!-- action field -->

      <record model="ir.actions.act_window" id="action_closing_detail">
            <field name="name">Closing</field>
           <field name="res_model">closing.text</field>
            <field name="view_mode">tree,form</field>
        </record>

  </data>
</odoo>
