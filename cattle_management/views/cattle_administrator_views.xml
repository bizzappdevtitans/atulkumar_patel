<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <data>
<!-- main menu of Cattle management module -->
        <menuitem id="cattle_management_menu_root"
            name="Cattle Management"/>

<!--created Administrator  sub menu of cattle management  -->
        <menuitem id="administrator_menu"
          name="Administrator"
          parent="cattle_management_menu_root"
          />
          <!-- action="action_administrator" -->

<!-- form tag start from here-->

        <record id="administrator_view_form" model="ir.ui.view">
            <field name="name">administrator.view.form</field>
            <field name="model">cattle.administrator</field>
            <field name="arch" type="xml">
                <form string="Administrator Menu">
                    <sheet>
                        <!-- sequence generator -->
                        <h2>
                            <field name="administrator_id"/>
                        </h2>
                            <group>
                                <field name="name"/>
                                <field name="email"/>
                                <field name="password"/>
                                <field name="permissions"/>
                            </group>
                    </sheet>

                </form>
            </field>
        </record>

<!-- tree tag start from here-->

        <record id="administrator_view_tree" model="ir.ui.view">
            <field name="name">administrator.view.tree</field>
            <field name="model">cattle.administrator</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="password"/>
                    <field name="permissions"/>
                </tree>
           </field>
        </record>


    <!-- action field -->

        <record model="ir.actions.act_window" id="action_administrator">
            <field name="name">Administrator</field>
            <field name="res_model">cattle.administrator</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>


