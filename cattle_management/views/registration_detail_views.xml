<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <data>
<!-- main menu of Cattle management module #T00316 -->
        <menuitem id="cattle_management_menu_root"
            name="Cattle Management"/>

<!--created Buyer  sub menu of cattle management #T00316 -->
         <menuitem id="registration_menu"
          name="Registration"
          parent="cattle_management_menu_root"
          />

          <!-- action="action_register" -->

<!-- form tag start from here #T00316-->

        <record id="registration_view_form" model="ir.ui.view">
            <field name="name">registration.view.form</field>
            <field name="model">registration.detail</field>
            <field name="arch" type="xml">
                <form string="Registration Menu">
                    <sheet>
                        <!-- sequence generator -->
                        <h2>
                            <field name="register_id"/>
                        </h2>

                            <group>
                                <field name="name"/>
                                <field name="contact" widget="phone"/>
                                <field name="email"/>
                                <field name="address"/>
                                <field name="date"/>
                                <field name="is_seller"/>
                                <field name="is_buyer"/>
                            </group>
                    </sheet>
                </form>
            </field>
        </record>

<!-- tree tag start from here #T00316-->

        <record id="registration_view_tree" model="ir.ui.view">
            <field name="name">registration.view.tree</field>
            <field name="model">registration.detail</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="contact" widget="phone"/>
                    <field name="email"/>
                    <field name="address"/>
                    <field name="date"/>
                    <field name="is_seller"/>
                    <field name="is_buyer"/>
                </tree>
           </field>
        </record>


    <!-- action field #T00316-->

        <record model="ir.actions.act_window" id="action_register">
            <field name="name">Registration</field>
            <field name="res_model">registration.detail</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>


