<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <data>
<!-- main menu of Cattle management module #T00316 -->
        <menuitem id="cattle_management_menu_root"
            name="Cattle Management"/>

<!--created cattle sub menu of cattle management #T00316 -->

        <menuitem id="cattle_menu"
          name="Cattle"
          parent="cattle_management_menu_root"
          action="action_cattle"
          groups = "group_cattle_management_cattle_detail"/>

<!-- form tag start from here #T00316-->

        <record id="cattle_view_form" model="ir.ui.view">
            <field name="name">cattle.view.form</field>
            <field name="model">cattle.detail</field>
            <field name="arch" type="xml">
                <form string="cattle Menu">
                    <header>
                        <button class="oe_highlight" type="object" name="create_products" id="create_product" string="Create Product" icon="fa-icon"/>


                          <!-- statusbar field -->

                        <field name="state" widget="statusbar" nolable="1" options="{'clickable':'1'}"/>

                    </header>

                    <sheet>
                         <!-- priority button -->
                        <div class='oe_title'>
                            <h1>
                                <field name='priority' widget="priority" class='mr-3'/>

                             </h1>
                         </div>
                        <!-- sequence generator -->
                        <h2>
                            <field name="cattle_seq"/>
                        </h2>
                            <group>
                                <group>
                                    <field name="cattle_name"/>
                                    <field name="cattle_gender"/>
                                    <field name="birth_date"/>
                                    <field name="cattle_age"/>
                                    <field name="cattle_breed"/>
                                    <field name="cattle_weight"/>
                                    <field name="price"/>
                                    <field name="sold"/>
                                    <field name="cattle_colour"/>
                                    <field name="user_id"/>

                                </group>
                                <group>
                                    <field name="cattle_image" widget="image" />
                                </group>
                        </group>
                    </sheet>

                </form>
            </field>
        </record>

<!-- tree tag start from here #T00316-->

        <record id="cattle_view_tree" model="ir.ui.view">
            <field name="name">cattle.view.tree</field>
            <field name="model">cattle.detail</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="cattle_name"/>
                    <field name="cattle_gender"/>
                    <field name="cattle_age"/>
                    <field name="cattle_breed"/>
                    <field name="cattle_weight"/>
                    <field name="price"/>
                    <field name="cattle_colour"/>
                    <field name="user_id"/>

                </tree>
           </field>
        </record>

<!-- kanban view start from here -->

      <record id="cattle_kanban_view" model="ir.ui.view">
            <field name="name">cattle.detail.view.kanban</field>
            <field name="model">cattle.detail</field>
            <field name="arch" type="xml">

             <!-- kanban tag starts from here -->
                <kanban class="o_res_partner_kanban">
                    <field name="id"/>
                    <field name="cattle_name"/>
                    <field name="cattle_age"/>
                    <field name="cattle_breed"/>
                    <field name="cattle_weight"/>
                    <field name="price"/>
                    <field name="cattle_image"/>
                    <field name="cattle_colour"/>


                    <!-- template tag starts from here -->
                        <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">

                                <!-- div tag to add image in kanban view -->
                                <div class="o_kanban_image">

                                    <img alt="Avatar" t-att-src="kanban_image('cattle.detail','cattle_image',record.id.raw_value)"/>
                                </div>

                                <!-- kanban view fields -->
                                <div class="oe_kanban_details">
                                        <strong class="o_kanban_record_title">
                                            <h2>
                                                <field name="cattle_name"/>
                                            </h2>
                                        </strong>

                                        <div t-if="record.cattle_breed.value">
                                            <h6>  Breed: </h6>  <t t-esc="record.cattle_breed.value"/>
                                        </div>

                                        <div t-if="record.cattle_colour.value">
                                            <h6> Colour: </h6>  <t t-esc="record.cattle_colour.value"/>
                                        </div>

                                        <div t-if="record.cattle_age.value">

                                            <h6> Age: </h6> <t t-esc="record.cattle_age.value"/>
                                        </div>

                                        <div t-if="record.price.value">

                                            <h6> Price: </h6> <t t-esc="record.price.value"/>
                                        </div>
                                        <div t-if="record.cattle_weight.value">

                                            <h6> Weight: </h6> <t t-esc="record.cattle_weight.value"/>
                                        </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                    <!-- template tag end here -->
                </kanban>
                <!-- kanban tag end here -->
            </field>
        </record>



    <!-- action field #T00316-->

        <record model="ir.actions.act_window" id="action_cattle">
            <field name="name">Cattle</field>
            <field name="res_model">cattle.detail</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a cattle in your cattle detail
            </p>
        </field>
        </record>
    </data>
</odoo>



