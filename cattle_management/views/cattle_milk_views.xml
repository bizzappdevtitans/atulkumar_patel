<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <data>
<!-- main menu of Cattle management module #T00316 -->
        <menuitem id="cattle_management_menu_root"
            name="Cattle Management"/>

<!--created cattle feed  sub menu of cattle management #T00316 -->
         <menuitem id="cattle_milk_menu"
          name="Cattle Milk"
          parent="cattle_management_menu_root"
          action="action_cattle_milk"
          groups = "group_cattle_management_cattle_milk"/>


<!-- form tag start from here #T00316-->

        <record id="cattle_milk_view_form" model="ir.ui.view">
            <field name="name">cattle.milk.view.form</field>
            <field name="model">cattle.milk</field>
            <field name="arch" type="xml">
                <form string="Cattle Milk">
                    <sheet>

                            <group>
                                <field name="cattle_id"/>
                                <field name="start_milking_date"/>
                                <field name="last_milking_date"/>
                                <field name = "total_days"/>
                                <field name="milk_yield"/>
                                <field name="average_milk_yield"/>

                            </group>
                    </sheet>

                </form>
            </field>
        </record>

<!-- tree tag start from here #T00316-->

        <record id="cattle_milk_view_tree" model="ir.ui.view">
            <field name="name">cattle.milk.view.tree</field>
            <field name="model">cattle.milk</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="cattle_id"/>
                    <field name="start_milking_date"/>
                    <field name="last_milking_date"/>
                    <field name = "total_days"/>
                    <field name="milk_yield"/>
                    <field name="average_milk_yield"/>
                </tree>
           </field>
        </record>

    <!-- action field #T00316-->

        <record model="ir.actions.act_window" id="action_cattle_milk">
            <field name="name">Cattle Milk</field>
            <field name="res_model">cattle.milk</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>




