<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <data>
<!-- main menu of Cattle management module #T00316 -->
        <menuitem id="cattle_management_menu_root"
            name="Cattle Management"/>

<!--created seller sub menu of cattle management #T00316 -->
        <menuitem id="seller_menu"
          name="Seller"
          parent="cattle_management_menu_root"
         action="action_seller"/>
         <menuitem id="sale_order_cattle"
          name="Sale"
          parent="cattle_management_menu_root"
        action="sale.action_quotations_with_onboarding"/>


         <!--  -->

<!-- form tag start from here #T00316-->

        <record id="seller_view_form" model="ir.ui.view">
            <field name="name">seller.view.form</field>
            <field name="model">cattle.seller</field>
            <field name="arch" type="xml">
                <form string="Seller Menu">
                      <header>
                         <!-- Footer tag start from here #T00316 -->
                         <button class="oe_highlight" type="object" name="create_sale_order" id="create_sale_order_open" context="{'open_sale_order': True}" string="create sale order" icon="fa-icon"/>
                         <button  class="btn-secondary" type="object" name="create_sale_order" string="create sale order" icon="fa-icon"/>
                         <button string="Cancel" class="btn btn-default" special="cancel" data-hotkey="z"/>
                    </header>
                    <sheet>
                          <!-- smart button -->
                            <div class="oe_button_box" name="button_box">
                                <button class="oe_highlight" type="object" name="get_cattle" icon="fa-hand-o-right">
                                    <!-- <span class="o_stat_text">Total Cattle</span> -->
                                    <field name="total_cattle" widget="statinfo"/>
                                </button>
                            </div>
                        <!-- sequence generator -->
                        <h2>
                            <field name="seller_id"/>
                        </h2>


                            <group>
                                <field name="name"/>
                                <field name="contact" widget="phone"/>
                                <field name="email"/>
                                <field name="address"/>
                            </group>


                    </sheet>

                </form>
            </field>
        </record>

<!-- tree tag start from here #T00316-->

        <record id="seller_view_tree" model="ir.ui.view">
            <field name="name">seller.view.tree</field>
            <field name="model">cattle.seller</field>
            <field name="arch" type="xml">
                <tree>

                    <field name="name"/>
                    <field name="contact" widget="phone"/>
                    <field name="email"/>
                    <field name="address"/>

                </tree>
           </field>
        </record>


    <!-- action field #T00316-->

        <record model="ir.actions.act_window" id="action_seller">
            <field name="name">Seller</field>
            <field name="res_model">cattle.seller</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>


