<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <data>
<!-- main menu of Cattle management module #T00316 -->
        <menuitem id="cattle_management_menu_root"
            name="Cattle Management"/>

<!--created Buyer  sub menu of cattle management #T00316 -->
         <menuitem id="payment_menu"
          name="Buy and Pay"
          parent="cattle_management_menu_root"
          action="action_payment"/>

<!-- form tag start from here #T00316-->

        <record id="payment_view_form" model="ir.ui.view">
            <field name="name">payment.view.form</field>
            <field name="model">cattle.payment</field>
            <field name="arch" type="xml">
                <form string="Payment Menu">


                    <!-- statusbar field  #T00316-->
                    <header>
                        <field name="status" widget="statusbar" nolable="1" options="{'clickable':'1'}"/>
                    </header>

                    <sheet>

                        <!-- sequence generator #T00316-->
                        <h2>
                            <field name="payment_id"/>
                        </h2>
                            <group>
                                <field name="buyer_id"/>
                                <field name="amount"/>
                                <field name="date"/>

                            </group>
                        <notebook>
                            <page string="Cattle Line">
                                <field name="cattle_ids"/>
                            </page>
                        </notebook>
                    </sheet>

                </form>
            </field>
        </record>

<!-- tree tag start from here #T00316-->

        <record id="payment_view_tree" model="ir.ui.view">
            <field name="name">payment.view.tree</field>
            <field name="model">cattle.payment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="buyer_id"/>
                    <field name="date"/>
                    <field name="cattle_ids"/>
                </tree>
           </field>
        </record>


    <!-- action field #T00316-->

        <record model="ir.actions.act_window" id="action_payment">
            <field name="name">Payment</field>
            <field name="res_model">cattle.payment</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>


