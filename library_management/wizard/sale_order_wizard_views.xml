<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <data>
<!-- Library management main menu #T00316 -->
        <menuitem id="library_management_menu_root"
            name="Library Management"/>

<!-- Library management sale order wizard menu #T00316 -->
        <menuitem id="sale_order_wizard_menu"
          name="SaleOrderWizard"
          parent="library_management_menu_root"
          action="action_sale_order_form_wizard"/>

<!-- Form tag start from here #T00316-->

        <record id="sale_order_wizard_view_form" model="ir.ui.view">
            <field name="name">sale.order.view.form</field>
            <field name="model">sale.order.wizard</field>
            <field name="arch" type="xml">
                <form string="Wizard">
                    <sheet>
                        <group string="wizard Management">
                            <group>
                                <field name="partner_id"/> 

                            </group>
                        </group>
<!-- Notebook tag start from here #T00316 -->
                        <notebook>                       
                                <page string="Order Line"> 
                                    <form>  
                                     <!-- Added sale line id one to many field #T00316 -->
                                        <field name="order_line"/>

                                    </form> 
                                </page>
                        </notebook> 
 <!-- Notebook tag end here #T00316 -->
                    </sheet> 
                     <!-- Sheet tag end here #T00316 -->
                    <footer>
                        <!-- Footer tag start from here #T00316 -->
                        <button class="oe_highlight" type="object" name="create_sale_order" id="create_sale_order_open" context="{'open_sale_order': True}" string="create and view sale order" icon="fa-icon"/>
                        <button  class="btn-secondary" type="object" name="create_sale_order" string="create sale order" icon="fa-icon"/>
                        <button string="Cancel" class="btn btn-default" special="cancel" data-hotkey="z"/>
                    </footer> 
 <!-- Footer tag end here #T00316  -->
                </form>              
            </field>
        </record>

<!-- Action field start from here #T00316-->

      <record id="action_sale_order_form_wizard" model="ir.actions.act_window">
            <field name="name">Create Sale Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="sale_order_wizard_view_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>



